<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/w_button"
        android:text="@string/war_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onWarButtonClicked"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        />

    <Button
        android:id="@+id/bj_button"
        android:text="@string/black_jack_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onBlackJackButtonClicked"
        android:layout_below="@+id/w_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        />


</RelativeLayout>